<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <%- include("./partials/navbarAdmin.ejs") %>
    <main>
      <div class="container" style="margin-top: 80px">
        <div class="container my-4">
          <div class="input-group d-flex justify-content-between align-items-center">
            <h1>Usuarios</h1>
            <a href="/panel/bd-users/crear" class="btn btn-success rounded">Crear usuario</a>
          </div>
          <table class="table table-bordered">
            <tr>
              <th class="barras">ID</th>
              <th class="barras">Nombre</th>
              <th class="barras">Apellido</th>
              <th class="barras">Email</th>
              <th class="barras">Registro</th>
            </tr>
            <tbody id="contenido">
              <% for (const user of users) {%>
              <tr class="align-items-center">
                <td><%= user.id %></td>
                <td class="barras"><%= user.firstname %></td>
                <td class="barras"><%= user.lastname%></td>
                <td class="barras"><%= user.email%></td>
                <td class="barras">
                  <%= `Se registrÃ³ el ${user.createdAt.getDay()} del ${user.createdAt.getMonth()} de
                  ${user.createdAt.getFullYear()}` %>
                </td>
                <td class="gap-2">
                  <a href="/panel/bd-users/<%= user.id %>/editar" class="btn btn-primary">
                    Editar
                  </a>
                  <form action="/panel/bd-users/<%= user.id %>?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger mt-2">Eliminar</button>
                  </form>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
    <%- include("./partials/footer.ejs") %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
