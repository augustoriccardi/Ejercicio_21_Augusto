<form
  action="/articulos/"
  method="post"
  class="d-flex flex-column gap-4"
  enctype="multipart/form-data"
>
  <label class="form-label" for="title">Ingrese el titulo de su Articulo:</label>
  <input class="form-control" type="text" name="title" id="title" placeholder="Titulo..." />
  <label class="form-label" for="content">Ingrese el contenido de su Articulo:</label>
  <textarea
    class="form-control"
    name="content"
    id="content"
    cols="30"
    rows="10"
    placeholder="Contenido..."
  ></textarea>

  <div class="container d-flex align-items-center justify-content-center flex-column gap-2">
    <h2>Imagen del Articulo</h2>
    <img
      src="/img/bd_img/<%=article.image %>"
      alt="Imagen articulo <%=article.title %> %>"
      srcset=""
      class="img-fluid rounded"
    />
  </div>
  <label for="image" class="form-label">Seleccionar nueva imagen del articulo:</label>
  <input type="file" name="image" id="image" class="btn btn-dark form-control" />
  <div class="d-flex justify-content-between">
    <% if(user.role===2) {%>
    <a href="/usuarios/mis-articulos" class="btn btn-danger w-25">volver</a>
    <% } else if (user.role===4){%>
    <a href="/panel/admin" class="btn btn-danger w-25">volver</a>
    <% } %>
    <button type="submit" class="btn btn-success w-25">Crear</button>
  </div>
</form>
